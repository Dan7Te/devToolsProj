<Page x:Class="курсовая.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:курсовая"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Page1">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/free-vector-gradients-20.jpg"/>
        </Grid.Background>
        <Button x:Name="klient" Content="Клиент" HorizontalAlignment="Left" Margin="121,300,0,0" VerticalAlignment="Top" Height="81" Width="214" Click="Button_Click" FontFamily="Arial" FontSize="20" FontStyle="Italic" Background="#FFE9C7F0"/>
        <Button x:Name="admin" Content="Администратор" HorizontalAlignment="Left" Margin="537,300,0,0" VerticalAlignment="Top" Height="81" Width="214" Click="admin_Click" FontFamily="Arial" FontSize="20" FontStyle="Italic" Background="#FFE9C7F0" RenderTransformOrigin="-0.147,0.039"/>
        <TextBox HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" Text="Выберите Роль" VerticalAlignment="Top" Width="602"  Height="62" FontFamily="Arial" FontStyle="Italic" FontSize="36" TextAlignment="Center" BorderBrush="#00000000" Background="{x:Null}"/>

    </Grid>
</Page>
